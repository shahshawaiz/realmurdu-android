<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shawaiz.realmurdu.Game2Activity"
    android:background="#009999"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="900px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/available_games_title"
            android:text="@string/game_2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50px" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="500px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/question"
                        android:src="@drawable/object_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="#FFFFFF"
                        android:tag=""
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="fill_vertical"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:id="@+id/option1"
                        android:src="@drawable/alphabet_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="checkAnswer"
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:tag=""
                        />

                    <ImageView
                        android:id="@+id/option2"
                        android:src="@drawable/alphabet_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="checkAnswer"
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:tag=""
                        />


                    <ImageView
                        android:id="@+id/option3"
                        android:src="@drawable/alphabet_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="checkAnswer"
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:tag=""
                        />

                    <ImageView
                        android:id="@+id/optionnone"
                        android:src="@drawable/alphabet_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="checkAnswer"
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:tag="0"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/question_status_game2"
        android:text="@string/game_answer_select_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:textColor="#000000"
        android:textSize="12pt"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
